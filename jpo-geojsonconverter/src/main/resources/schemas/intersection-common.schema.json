{
    "$schema": "https://json-schema.org/draft/2019-09/schema",
    "$id": "https://raw.githubusercontent.com/usdot-jpo-ode/jpo-geojsonconverter/develop/jpo-geojsonconverter/src/main/resources/schemas/intersection-common.schema.json",  
    "$defs": {
        "ValidationMessageList": {
            "type": "array",
            "items": {
                "$ref": "#/$defs/ValidationMessage"
            },
            "minItems": 0,
            "description": "A list of validation messages"
        },
        "ValidationMessage": {
            "type": "object",
            "properties": {
                "message": {
                    "type": "string",
                    "description": "Description/summary of the validation error"
                },
                "jsonPath": {
                    "type": "string",
                    "description": "Path in the original ODE JSON message"
                },
                "schemaPath": {
                    "type": "string",
                    "description": "Path in the json schema of the ODE JSON"
                },
                "exception": {
                    "type": "string",
                    "description": "Details of java validation exception thrown, if any"
                }
            },
            "required": [
                "message"
            ]
        },
        "IPAddress": {
            "oneOf": [
                { 
                    "type": "string",
                    "format": "ipv4"
                },
                { 
                    "type": "string",
                    "format": "ipv6"
                }
            ]
        },
        "J2735SignalGroupID": {
            "type": "integer",
            "minimum": 0,
            "maximum": 255,
            "description": "DE_SignalGroupID"
        }
    }
}